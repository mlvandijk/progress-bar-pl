<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.mlvandijk.progressbarpl</id>
    <name>Polish Flag Progress Bar</name>
    <vendor>mlvandijk</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.mlvandijk.progressbarpl.startup.MyProjectActivity" />
        <applicationService serviceImplementation="com.github.mlvandijk.progressbarpl.progressbar.PolishFlagProgressIndicatorProvider"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.mlvandijk.progressbarpl.progressbar.PolishFlagProgressIndicatorProvider"
                  topic="com.intellij.ide.ui.LafManagerListener"/>
    </applicationListeners>
</idea-plugin>
